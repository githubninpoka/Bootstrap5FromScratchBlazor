@page "/rating"
<h3>Rating</h3>

<div class="d-flex container justify-content-center">
    <div class="card shadow p-5 bg-light">
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-7"><h3 class="fw-bold">What others think about the product</h3></div>
                <div class="col-5 card p-3">
                    <div class="card-title bg-white">
                        <h3 class="display-5 fw-semibold">
                            <i class="fa fa-star text-warning"></i>
                            <span class="fw-bold">4.8</span>
                        </h3>
                    </div>
                    <div class="card-body text-center">Average rating</div>
                </div>
            </div>
        </div>

        <div class="input-group input-group-lg mb-4">
            <span class="input-group-text rounded-start-5"><i class="fas fa-search"></i></span>
            <input class="form-control rounded-end-5" type="text" placeholder="Search Reviews" />
        </div>

        <div class="row p-5">
            <div class="col-12 vstack gap-2">
                <h6 class="fw-semibold">Reviews</h6>
                <div class="d-flex align-items-center">
                    <div class="col-1">
                        5 <i class="fa fa-star text-warning"></i>
                    </div>
                    <div class="col-10 progress" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-warning" style="width: 25%"></div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="col-1">
                        4 <i class="fa fa-star text-warning"></i>
                    </div>
                    <div class="col-10 progress" role="progressbar" aria-label="Basic example" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-warning" style="width: 45%"></div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="col-1">
                        3 <i class="fa fa-star text-warning"></i>
                    </div>
                    <div class="col-10 progress" role="progressbar" aria-label="Basic example" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-warning" style="width: 30%"></div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="col-1">
                        2 <i class="fa fa-star text-warning"></i>
                    </div>
                    <div class="col-10 progress" role="progressbar" aria-label="Basic example" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-warning" style="width: 2%"></div>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="col-1">
                        1 <i class="fa fa-star text-warning"></i>
                    </div>
                    <div class="col-10 progress" role="progressbar" aria-label="Basic example" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-warning" style="width: 5%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex">
            <button class="btn btn-success rounded-pill">Write Review</button>
        </div>
    </div>
</div>

