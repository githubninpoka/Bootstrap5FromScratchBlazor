@inject IJSRuntime jsRuntime

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Bootstrap5FromScratchBlazor</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="d-flex justify-content-center">
            <div class="btn-group">

                <button @onclick="@(() => HandleThemeClick("dark"))" class="btn btn-secondary btn-sm">Dark</button>
                <button @onclick="@(() => HandleThemeClick("light"))" class="btn btn-light btn-sm">Light</button>
            </div>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/pricingcards">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> pricingcards
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/rating">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> rating
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/userlist">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> userlist
            </NavLink>
        </div>


    </nav>
</div>

@code{
    private string themeSetting = "light";

    public void HandleThemeClick(string input){
        themeSetting = input;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await jsRuntime.InvokeVoidAsync("switchSiteThemeToggle", themeSetting);
        
    }
}